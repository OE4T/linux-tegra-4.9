/ {

	chosen {
		plugin-manager {
			odm-data {
				enable-tegra-wdt;
			};
		};
	};

	plugin-manager {
		fragement@0 {
			odm-data = "enable-tegra-wdt";
			override@0 {
				target = <&tegra_arm_wdt>;
				_overlay_ {
					status = "okay";
				};
			};
			override@1 {
				target = <&soft_wdt>;
				_overlay_ {
					status = "disabled";
				};
			};
		};

		fragement@1 {
			odm-data = "disable-tegra-wdt";
			override@0 {
				target = <&tegra_pmc>;
				_overlay_ {
					nvidia,enable-halt-in-fiq;
				};
			};
		};
	};
};

